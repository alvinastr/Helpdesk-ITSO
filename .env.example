APP_NAME=ITSO
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

DB_CONNECTION=sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120

# ============================================
# IMAP EMAIL FETCH CONFIGURATION
# ============================================

# IMAP Server (Zimbra Mail Server)
IMAP_HOST=10.103.7.18
IMAP_PORT=993
IMAP_USERNAME=itsupport.monitor@bankmega.com
IMAP_PASSWORD=your_password_here
IMAP_ENCRYPTION=ssl
IMAP_VALIDATE_CERT=false

# Fetch Settings
IMAP_FETCH_LIMIT=50
IMAP_FETCH_DAYS_BACK=

# ============================================
# EMAIL FILTERING (Optional - untuk kontrol email mana yang diproses)
# ============================================

# 1. Filter by Content Length (dalam karakter)
#    Set ke 0 untuk disable (accept semua email termasuk yang kosong)
#    Recommended: 0 atau 5
IMAP_MIN_CONTENT_LENGTH=0

# 2. Filter by Sender Domain (whitelist)
#    Hanya email dari domain ini yang diproses
#    Pisahkan dengan koma, contoh: bankmega.com,gmail.com
#    Kosongkan untuk allow semua domain
IMAP_ALLOWED_DOMAINS=

# 3. Filter by Recipient Email/Group
#    Email harus dikirim ke salah satu address ini (TO atau CC)
#    Contoh untuk filter by group IT:
#    it.infrastructure@bankmega.com,it.security@bankmega.com,itso@bankmega.com
#    Kosongkan untuk allow semua recipient
IMAP_VALID_RECIPIENTS=

# 4. Filter by Subject Keywords (optional)
#    Subject harus mengandung minimal salah satu keyword
#    Pisahkan dengan koma
#    Kosongkan untuk allow semua subject
IMAP_REQUIRED_KEYWORDS=

# 5. Admin Emails (untuk detect email dari tim support)
#    Digunakan untuk classify email thread
IMAP_ADMIN_EMAILS=it.infrastructure@bankmega.com,itsupport.monitor@bankmega.com

# ============================================
# CONTOH KONFIGURASI UNTUK BERBAGAI SKENARIO
# ============================================

# Skenario 1: ACCEPT SEMUA EMAIL (No Filter)
# IMAP_MIN_CONTENT_LENGTH=0
# IMAP_ALLOWED_DOMAINS=
# IMAP_VALID_RECIPIENTS=
# IMAP_REQUIRED_KEYWORDS=

# Skenario 2: HANYA EMAIL KE GROUP IT
# IMAP_MIN_CONTENT_LENGTH=0
# IMAP_VALID_RECIPIENTS=it.infrastructure@bankmega.com,it.security@bankmega.com,itso@bankmega.com

# Skenario 3: HANYA DARI DOMAIN INTERNAL
# IMAP_MIN_CONTENT_LENGTH=0
# IMAP_ALLOWED_DOMAINS=bankmega.com

# Skenario 4: KOMBINASI (Domain Internal + Group IT)
# IMAP_MIN_CONTENT_LENGTH=0
# IMAP_ALLOWED_DOMAINS=bankmega.com
# IMAP_VALID_RECIPIENTS=it.infrastructure@bankmega.com,it.security@bankmega.com,itso@bankmega.com
